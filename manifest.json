{
    "name": "Instacart Price Comparison",
    "description": "Compares prices of items across different Instacart retailers.",
    "version": "1.0",
    "manifest_version": 3,
    "host_permissions": [
        "https://www.instacart.com/*"
    ],
    "icons": {
        "128": "instacart_logo.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Instacart Price Comparison",
        "default_icon": "instacart.png"
    },
    "options_page": "options.html",
    "permissions": [
        "sidePanel",
        "scripting",
        "tabs",
        "storage"
    ]
}